<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Dark">
    <BarBrand>
        <BarItem>
            <BarLink To="/">
                <BarIcon IconName="customLogo"/>
                Rent a car !
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Home"/>
                    Home
                </BarLink>
            </BarItem>
            <AuthorizeView Policy="OnlyCustomer">
                <BarItem>
                    <BarLink To="/ReservationHistory">
                        <BarIcon IconName="IconName.CreditCard"/>
                        Reservation
                    </BarLink>
                </BarItem>
            </AuthorizeView>
            <AuthorizeView Policy="SecurityLevel0">
                <BarItem>
                    <BarLink To="/Profile">
                        <BarIcon IconName="IconName.User"/>
                        Account
                    </BarLink>
                </BarItem>
            </AuthorizeView>

            <AuthorizeView Policy="SecurityLevel1">
                <BarLink To="/AllCars">
                    <BarIcon IconName="IconName.ListUl"/>
                    Car list(Staff only)
                </BarLink>
                <BarLink To="/ReservationsEmployee">
                    <BarIcon IconName="IconName.ListOl"/>
                    Reservations(Staff only)
                </BarLink>
                <BarLink To="/AllCustomers">
                    <BarIcon IconName="IconName.ListOl"/>
                    Customers(Staff only)
                </BarLink>
            </AuthorizeView>

            <AuthorizeView Policy="SecurityLevel2">
                <BarLink To="/AllEmployees">
                    <BarIcon IconName="IconName.List"/>
                    Manage employees(Admin Staff only)
                </BarLink>
            </AuthorizeView>
        </BarStart>
    </BarMenu>
</Bar>

@code {

    RenderFragment customLogo =
        @<img src="Img/Logo.png" style="width:50px; height:50px"/>
        ;

}